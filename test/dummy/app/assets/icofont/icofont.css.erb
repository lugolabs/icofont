@font-face {
  font-family: "icofont";
  src: url(<%= asset_path "icofont/icofont.eot" %>);
  src: url(<%= asset_path "icofont/icofont.eot?#iefix" %>) format("embedded-opentype"),
       url(<%= asset_path "icofont/icofont.woff" %>) format("woff"),
       url(<%= asset_path "icofont/icofont.ttf" %>) format("truetype"),
       url(<%= asset_path "icofont/icofont.svg#icofont" %>) format("svg");
  font-weight: normal;
  font-style: normal;
}

[data-icon]:before { content: attr(data-icon); }

[data-icon]:before,
.icofont-alarm:before,
.icofont-alarm2:before,
.icofont-angry:before,
.icofont-angry2:before,
.icofont-apple:before,
.icofont-arrow-down-left:before {
  display: inline-block;
  font-family: "icofont";
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  line-height: 1;
  text-decoration: inherit;
  text-transform: none;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
}

.icofont-alarm:before { content: "\f100"; }
.icofont-alarm2:before { content: "\f101"; }
.icofont-angry:before { content: "\f102"; }
.icofont-angry2:before { content: "\f103"; }
.icofont-apple:before { content: "\f104"; }
.icofont-arrow-down-left:before { content: "\f105"; }
